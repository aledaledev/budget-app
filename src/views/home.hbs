{{#if visible}}

   <div class="container">
  <div class=" row h-75 w-100 mx-auto">
    <div class="col-12 col-lg-7 d-inline-flex flex-column border-primary align-items-center m-auto rounded-4 border border-1 p-5 shadow">
      <h1 class="fw-normal text-dark text-opacity-75 mb-4 text-center">Welcome to <span class="custom-brand text-primary fw-bold pb-1 ">ExpenceTop</span></h1>
      <p class="fw-light text-secondary fs-5 text-center"><span class="fw-bold">ExpenceTop</span> is an application where you will register
        your products and expenses, as well as see the total in your local
        currency and in USD.</p>
      <p class="fw-light text-secondary fs-5 text-center">Sign up now and start creating and saving your tables!</p>
    </div>
  </div>
</div>

{{else}}

<h1 class="fw-normal text-dark text-opacity-75 mb-4 text-center">Welcome back {{{name}}}</h1>

<div class="toast align-items-center text-bg-primary border-0" role="alert" aria-live="assertive" aria-atomic="true">
  <div class="d-flex">
    <div class="toast-body">
      Hello, world! This is a toast message.
    </div>
    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
</div>

{{/if}}
